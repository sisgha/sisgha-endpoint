{
  "compilerOptions": {
    "strict": true,
    "module": "node16",
    "lib": ["esnext"],
    "paths": {
      "#recipe-guard-core": ["./node_modules/recipe-guard/packages/core"],
      "#recipe-guard-core/*": ["./node_modules/recipe-guard/packages/core/*"],
      "#recipe-guard-typeorm": ["./node_modules/recipe-guard/packages/typeorm"],
      "#recipe-guard-typeorm/*": ["./node_modules/recipe-guard/packages/typeorm/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  }
}
